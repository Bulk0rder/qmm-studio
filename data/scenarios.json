        "title": "Bank Churn Prevention via 'Service Recovery Paradox'",
        "industry": "Banking",
        "market": "Africa / Global South",
        "customer_state": "Retention",
        "objective": "Reduce Churn",
        "constraints": [
            "Low Budget",
            "High Compliance",
            "SMS/Email only"
        ],
        "inputs": {
            "product": "Savings Account",
            "audience": "Dormant users > 60 days",
            "channels": [
                "SMS",
                "Email",
                "In-App"
            ],
            "timing": "Monthly cycle"
        },
        "signals": [
            "Zero balance > 60 days",
            "Failed transaction x2"
        ],
        "recommended_qm_principles": [
            "Indeterminacy",
            "Non-Commutativity"
        ],
        "sequence_map": [
            {
                "step": 1,
                "touchpoint": "SMS Inquiry",
                "rationale": "Low friction check-in",
                "trigger": "60 days dormancy",
                "fallback": "Do nothing"
            },
            {
                "step": 2,
                "touchpoint": "Email Educate",
                "rationale": "Value reminder without ask",
                "trigger": "SMS delivered",
                "fallback": "Archive user"
            },
            {
                "step": 3,
                "touchpoint": "In-App Offer",
                "rationale": "Fee waiver incentive",
                "trigger": "Email open",
                "fallback": "SMS Reminder"
            }
        ],
        "kpis": {
            "primary": "Re-activation Rate",
            "secondary": [
                "NPS",
                "Cost per Rectivation"
            ],
            "measurement_plan": "Control group holdout 10%"
        },
        "experiment_plan": {
            "type": "A/Z sequence",
            "description": "Test if offering incentive FIRST (Variant Z) performs worse than Check-in FIRST (Variant A). (Law of Non-Commutativity)",
            "tests": [
                {
                    "hypothesis": "Sequence A (Care -> Offer) beats Sequence Z (Offer -> Care) by 20%",
                    "stopping_rule": "n=1000 or p<0.05"
                }
            ]
        },
        "risks_and_ethics": {
            "privacy_note": "Do not mention specific balances in SMS.",
            "bias_check": "Ensure low-income segments aren't excluded from waivers.",
            "transparency_level": "High - explain why they got the offer."
        },
        "last_updated": "2024-05-20"
